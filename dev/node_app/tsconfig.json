{
    "compilerOptions": {
      "target": "ES5",
      "module": "commonjs",
      "outDir": "./dist",
      "strict": true,
      "noImplicitAny": false,
      "moduleResolution": "node",
      "baseUrl": "./src",
      "paths": {
         "src/*": ["./src/*"]
      },
      "typeRoots": [
        "./src"
      ],
      "types": [
        "node"
      ],
      "resolveJsonModule": true,
      "esModuleInterop": true,
      "skipLibCheck": true
    },
    "include": [
      "./src",
      "node_modules/@types"
    ]
}
